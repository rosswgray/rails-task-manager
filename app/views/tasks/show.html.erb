<div class="container">
  <div class="col-8">
  <div class="d-flex justify-content-between">
    <h1>Task View</h1>
    
  </div>
    
    <div class="card bg-light my-4 w-50" style="max-width: 30rem;">
      <div class="card-header"><%= @task.title %></div>

      <div class="card-body">
        <div class="card-title"><%= @task.details %></div>
              <% if @task.completed == false %>
          <p class="card-text">☐ task is not complete</p>
        <% else %>
          <p class="card-text">🗹 task is complete</p>
        <% end %> 
      </div>

    </div>

    <div class="d-flex">
      <%= link_to 'Return to tasks', tasks_path, class: "btn btn-primary m-4" %>

      <%= link_to 'Edit this task', task_edit_path(@task), class: "btn btn-info m-4" %>

      <%= link_to "Delete #{@task.title}", 
        task_path(@task),
        method: :delete,
        data: { confirm: "Are you sure?" },
        class: "btn btn-warning m-4"
      %>
  
    </div>

  </div> 
</div>
